{% extends "GosylCommonBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }}
{% endblock %}



{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        if (typeof Gosyl === 'undefined') {
            Gosyl = {};
        }

        if (typeof Gosyl.MyCarbuConso === 'undefined') {
            Gosyl.MyCarbuConso = {};
        }

        Gosyl.MyCarbuConso.rootPath = '{{ path('gosyl_homepage') }}';
    </script>
{% endblock %}

{% block content %}
    {{ parent() }}
    {% set aModalErreurOptions = {
    options: {
        js: {
            backdrop: 'static',
            show: false,
            keyboard: false
        },
        id: 'modalErreur'
        }
    }
    %}
    {{ modal('', "", aModalErreurOptions) }}
{% endblock %}
